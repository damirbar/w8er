<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewCartAmount"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view_cart_shape"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:gravity="center|end"
        android:maxLines="1"
        android:text="$12"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="190.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/textViewCartAmount"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="Pizza"
        android:textAlignment="viewStart"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/subhead_size" />

    <ImageView
        android:id="@+id/divider_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textViewCartAmount"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="?attr/colorButtonNormal"
        android:visibility="visible" />

</RelativeLayout>